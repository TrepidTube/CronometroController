<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/timerContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <!-- Period Section -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_gradient_background"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modo de manejo"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/ivModeArrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_mode_arrow"
                    android:layout_marginStart="8dp"
                    android:padding="2dp"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/spinnerMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:background="@drawable/spinner_background"
                android:popupBackground="@drawable/spinner_dropdown_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <include
                android:id="@+id/periodDigit1"
                layout="@layout/digit_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp" />

            <include
                android:id="@+id/periodDigit2"
                layout="@layout/digit_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Separator -->
        <View
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="24dp"
            android:background="#DDDDDD" />

        <!-- Clock Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Minutes -->
            <include
                android:id="@+id/minuteDigit1"
                layout="@layout/digit_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp" />

            <include
                android:id="@+id/minuteDigit2"
                layout="@layout/digit_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Time Separator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
                android:text=":"
                android:textSize="40sp"
                android:textStyle="bold" />

            <!-- Seconds -->
            <include
                android:id="@+id/secondDigit1"
                layout="@layout/digit_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp" />

            <include
                android:id="@+id/secondDigit2"
                layout="@layout/digit_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- IP Address -->
        <TextView
            android:id="@+id/tvIpAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_gradient_background"
            android:padding="8dp"
            android:text="IP: 0.0.0.0/0"
            android:textColor="#FFFFFF" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_gradient_background"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Conectado"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="4dp"
                android:text="Desconectado"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <!-- Timer Container -->

    <!-- Bottom Controls Section -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="730dp"
        android:layout_height="161dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <!-- Mode Selection -->

        <!-- Presets Section -->

        <LinearLayout
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presets"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/digit_background"
                android:padding="8dp"
                android:text="8:88"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_background_white"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnStop"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/control_button_selector"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_stop" />

            <ImageButton
                android:id="@+id/btnPlay"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/control_button_selector"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_play" />

            <ImageButton
                android:id="@+id/btnPause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/control_button_selector"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_pause" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>