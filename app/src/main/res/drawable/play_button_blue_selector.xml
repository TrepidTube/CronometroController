<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#2E5EAB"
                android:endColor="#6088C6" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#4285F4"
                android:endColor="#8AB4F8" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector> 